{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"outputs": ["dist/**", "pkg/**"],
			"dependsOn": ["^build"]
		},
		"preview": {
			"persistent": true
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"cache": false
		},
		"lint": {
			"cache": false
		}
	}
}
