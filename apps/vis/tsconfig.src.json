{
	"$schema": "https://json.schemastore.org/tsconfig",
	"include": ["./src"],
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"emitDeclarationOnly": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["esnext", "dom", "dom.iterable", "dom.asynciterable"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"paths": { "#*": ["./src/*"] },
		"target": "esnext",
		"sourceMap": true
	}
}
