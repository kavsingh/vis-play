{
	"prettier": { "allowed": false },
	"format_on_save": "on",
	"hard_tabs": true,
	"preferred_line_length": 80,

	"lsp": {
		"rust-analyzer": {
			"initialization_options": {
				"binary": { "path": "~/.cargo/bin/rust-analyzer" },
				"check": { "command": "clippy" },
				"diagnostics": { "styleLints": { "enable": true } },
				"rustfmt": { "extraArgs": ["+nightly"] }
			}
		},

		"oxlint": {
			"initialization_options": { "settings": { "typeAware": true } }
		},

		"eslint": {
			"settings": {
				"workingDirectories": [{ "mode": "auto" }],
				"onIgnoredFiles": "off"
			}
		},

		"oxfmt": {
			"initialization_options": { "settings": { "run": "onSave" } }
		},

		"tailwindcss-language-server": {
			"settings": {
				"validate": true,
				"classFunctions": ["tj", "tm", "tv"],
				"experimental": {
					"configFile": { "apps/vis/src/app.css": "apps/vis/src/**/*" }
				}
			}
		}
	},

	"languages": {
		"Rust": {
			"formatter": [{ "language_server": { "name": "rust-analyzer" } }]
		},

		"TypeScript": {
			"language_servers": [
				"tsgo",
				"oxlint",
				"eslint",
				"oxfmt",
				"tailwindcss-language-server"
			],
			"formatter": [{ "language_server": { "name": "oxfmt" } }],
			"code_actions_on_format": { "source.fixAll.oxc": true }
		},

		"TSX": {
			"language_servers": [
				"tsgo",
				"oxlint",
				"eslint",
				"oxfmt",
				"tailwindcss-language-server"
			],
			"formatter": [{ "language_server": { "name": "oxfmt" } }],
			"code_actions_on_format": { "source.fixAll.oxc": true }
		},

		"JavaScript": {
			"language_servers": ["tsgo", "oxlint", "eslint", "oxfmt"],
			"formatter": [{ "language_server": { "name": "oxfmt" } }],
			"code_actions_on_format": { "source.fixAll.oxc": true }
		},

		"CSS": {
			"language_servers": [
				"tailwindcss-intellisense-css",
				"!vscode-css-language-server"
			],
			"formatter": [{ "language_server": { "name": "oxfmt" } }]
		},

		"HTML": {
			"formatter": [{ "language_server": { "name": "oxfmt" } }]
		},

		"Markdown": {
			"formatter": [{ "language_server": { "name": "oxfmt" } }]
		},

		"JSON": {
			"formatter": [{ "language_server": { "name": "oxfmt" } }]
		},

		"JSONC": {
			"formatter": [{ "language_server": { "name": "oxfmt" } }]
		},

		"YAML": {
			"formatter": [{ "language_server": { "name": "oxfmt" } }]
		},

		"TOML": {
			"formatter": [{ "language_server": { "name": "tombi" } }]
		}
	}
}
